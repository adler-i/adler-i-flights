<% if current_user %>
  <div class="item">
    <%= "Welcome, #{current_user.name}" %>
  </div>

  <%= link_to past_bookings_path, 'data-no-turbolink': true, class: 'item' do %>
    <div class="ui blue button">Booking list</div>
  <% end %>
  <%= link_to logout_path, 'data-no-turbolink': true, class: 'item' do %>
    <div class="ui teal button">Logout</div>
  <% end %>
<% else %>
  <%= link_to signup_path, class: 'item' do %>
    <div class="ui primary button">Sign Up</div>
  <% end %>

  <%= link_to login_path, class: 'item' do %>
    <button class="ui teal button">Login</button>
  <% end %>
<% end %>
